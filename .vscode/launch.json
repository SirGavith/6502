    "version": "0.2.0",
    "configurations": [
        {
            "console": "internalConsole",
            "type": "node",
            "request": "launch",
            "name": "Assemble Open File",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\assembler\\built\\assembler\\src\\main.js",
            "args": [
                "${file}",
                "${fileDirname}"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "console": "externalTerminal",
            "type": "node",
            "request": "launch",
            "name": "Emulate Open File",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\emulator\\built\\emulator\\src\\main.js",
            "args": [
                "${file}"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "console": "externalTerminal",
            "type": "node",
            "request": "launch",
            "name": "Assemble and Emulate Open File",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\assembleRun\\built\\assembleRun\\src\\main.js",
            "args": [
                "${file}",
                "${fileDirname}"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
    ]
}